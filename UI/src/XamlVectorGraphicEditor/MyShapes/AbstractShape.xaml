<Border x:Class="AbstractShape"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Height="100"
        Width="100"
        Background="Transparent"
        MouseLeftButtonDown="RectMouseLeftButtonDown"
        MouseLeftButtonUp="RectMouseLeftButtonUp"
        BorderBrush="Black"
        
        BorderThickness="0.2">
    <Border.ContextMenu>
        <ContextMenu>
            <MenuItem Header="Клонировать" Click="CloneClick"/>
            <MenuItem Header="Удалить" Click="DeleteClick"/>
        </ContextMenu>
    </Border.ContextMenu>
</Border>
